.site-footer
  display flex
  align-items center
  justify-content flex-end
  height 40px
  background-color #1e2129
  color #fff
  &__content
    display flex
    justify-content flex-end
    align-items center
    a
      position relative
      color inherit
      user-select none
      cursor pointer
      outline 0
      border none
      display inline-block
      white-space nowrap
      text-decoration none
      vertical-align baseline
      text-align center
      margin 0
      min-width 64px
      line-height 24px
      padding 0 8px
      margin 0 8px
      border-radius 4px
      overflow visible
      >.overlay
        opacity 0
        background #fff
        top 0
        left 0
        right 0
        bottom 0
        position absolute
        pointer-events none
        border-radius inherit
        transition: 0.2s all ease
      &:hover
        >.overlay
          opacity 0.08
